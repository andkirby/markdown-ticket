{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@mdt/shared/*": ["../shared/*"]
    }
  },
  "include": [
    "tests/integration/**/*.ts",
    "src/**/*.ts"
  ]
}