{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/main.tsx",
    "vite.config.ts"
  ],
  "project": [
    "src/**/*.{ts,tsx}"
  ],
  "workspaces": {
    "server": {
      "entry": ["server.ts"],
      "project": ["**/*.ts"]
    },
    "mcp-server": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/tests/mocks/**",
    "**/mcp-dev-tools/**",
    "scripts/**",
    ".gitWT/**",
    "docs/**",
    "shared/**"
  ]
}