{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["src/**/*.tsx", "src/**/*.ts", "**/*.test.ts", "tailwind.config.js", "postcss.config.js"],
      "project": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "server": {
      "project": ["**/*.ts"]
    },
    "mcp-server": {
      "project": ["src/**/*.ts"],
      "ignore": ["src/tools/config/allTools.ts"]
    }
  },
  "ignore": [
    "shared/**",
    "domain-contracts/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/.next/**",
    "**/build/**",
    "**/mocks/**",
    "**/__mocks__/**",
    "**/mcp-dev-tools/**",
    "scripts/**",
    ".gitWT/**",
    "docs/**"
  ],
  "ignoreBinaries": ["jq", "prettier", "rimraf"],
  "ignoreDependencies": ["jest-environment-jsdom", "ts-jest"]
}
