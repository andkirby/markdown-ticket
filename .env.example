# Environment Variables for Markdown Ticket
# Copy to .env and customize for your environment

# Development (native) configuration
# VITE_BACKEND_URL=http://localhost:3001

# Docker configuration (used by docker-compose.dev.yml)
# VITE_BACKEND_URL=http://backend:3001

# Frontend logging
VITE_FRONTEND_LOGGING_AUTOSTART=false

# Vite HMR settings (optional)
VITE_HMR_HOST=localhost
VITE_HMR_PORT=5173

# MCP Server Configuration
# MCP_HTTP_ENABLED=false                     # Enable HTTP transport for MCP server (default: false)
# MCP_HTTP_PORT=3002                         # HTTP port for MCP server (default: 3002)
# MCP_BIND_ADDRESS=127.0.0.1                 # Bind address for MCP server (default: 127.0.0.1)

# MCP Server Security (Phase 2 - Optional)
# MCP_SECURITY_RATE_LIMITING=false           # Enable rate limiting (default: false)
# MCP_RATE_LIMIT_MAX=100                     # Max requests per window (default: 100)
# MCP_RATE_LIMIT_WINDOW_MS=60000             # Rate limit window in ms (default: 1 min)

# MCP Server Beta Features
# MCP_SANITIZATION_ENABLED=false             # Enable output sanitization (BETA - default: false)
#                                            # WARNING: Sanitization is in beta testing. May affect performance.
#                                            # To enable: MCP_SANITIZATION_ENABLED=true
