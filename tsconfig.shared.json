{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "rootDir": "./shared",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "shared/**/*.ts"
  ],
  "exclude": [
    "shared/**/*.js",
    "shared/**/*.d.ts",
    "node_modules",
    "dist",
    "shared/**/__tests__/**/*",
    "shared/**/*.test.ts",
    "shared/**/*.spec.ts"
  ]
}
