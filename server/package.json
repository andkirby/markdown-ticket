{
  "name": "markdown-ticket-server",
  "version": "1.0.0",
  "description": "Backend server for markdown-ticket application",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx server.ts",
    "dev:watch": "tsx watch server.ts",
    "build": "tsc --build",
    "build:watch": "tsc --watch",
    "create-samples": "tsx createSampleTickets.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:validate": "npx @apidevtools/swagger-cli validate openapi.yaml"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@isaacs/brace-expansion": "^5.0.0",
    "@mdt/shared": "*",
    "@types/glob": "^8.1.0",
    "axios": "^1.12.2",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^3.14.1",
    "redoc-express": "^2.1.3",
    "section-matter": "^1.0.0",
    "strip-bom-string": "^1.0.0",
    "swagger-jsdoc": "^6.2.8",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "markdown-ticket",
    "markdown",
    "change-request",
    "api",
    "express"
  ],
  "author": "markdown-ticket",
  "license": "MIT"
}
