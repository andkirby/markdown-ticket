{
  "name": "markdown-ticket-server",
  "type": "module",
  "version": "1.0.0",
  "description": "Backend server for markdown-ticket application",
  "author": "markdown-ticket",
  "license": "MIT",
  "keywords": [
    "markdown-ticket",
    "markdown",
    "change-request",
    "api",
    "express"
  ],
  "main": "dist/server.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx server.ts",
    "dev:watch": "tsx watch server.ts",
    "build": "tsc --build tsconfig.build.json && tsc-alias",
    "build:watch": "tsc --watch",
    "create-samples": "tsx createSampleTickets.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"**/*.{ts,tsx}\" --config eslint.config.ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --config eslint.config.ts --fix",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:validate": "npx @apidevtools/swagger-cli validate openapi.yaml"
  },
  "dependencies": {
    "@mdt/domain-contracts": "*",
    "@mdt/shared": "*",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^3.14.1",
    "redoc-express": "^2.1.3",
    "swagger-jsdoc": "^6.2.8",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
