{
  "name": "@mdt/shared",
  "type": "module",
  "version": "1.0.0",
  "description": "Shared TypeScript code for Markdown Ticket",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*"
    },
    "./models/*": {
      "types": "./dist/models/*.d.ts",
      "import": "./dist/models/*"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*"
    },
    "./templates/*": {
      "types": "./dist/templates/*.d.ts",
      "import": "./dist/templates/*"
    },
    "./tools/ProjectValidator": {
      "browser": "./dist/tools/ProjectValidator.js",
      "node": "./dist/tools/ProjectValidator.node.js",
      "default": "./dist/tools/ProjectValidator.node.js"
    },
    "./tools/*": {
      "types": "./dist/tools/*.d.ts",
      "import": "./dist/tools/*"
    },
    "./test-lib": {
      "types": "./dist/test-lib/index.d.ts",
      "import": "./dist/test-lib/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:tools": "tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@mdt/domain-contracts": "file:../domain-contracts",
    "fs-extra": "^11.2.0",
    "smol-toml": "^1.5.2",
    "toml": "^3.0.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
