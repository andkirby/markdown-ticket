{
  "name": "@mdt/shared",
  "version": "1.0.0",
  "description": "Shared TypeScript code for Markdown Ticket",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./services/*": {
      "import": "./dist/services/*",
      "types": "./dist/services/*.d.ts"
    },
    "./models/*": {
      "import": "./dist/models/*",
      "types": "./dist/models/*.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*",
      "types": "./dist/utils/*.d.ts"
    },
    "./templates/*": {
      "import": "./dist/templates/*",
      "types": "./dist/templates/*.d.ts"
    },
    "./tools/*": {
      "import": "./dist/tools/*",
      "types": "./dist/tools/*.d.ts"
    },
    "./test-lib": {
      "import": "./dist/test-lib/index.js",
      "types": "./dist/test-lib/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:tools": "tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
