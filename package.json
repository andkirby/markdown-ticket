{
  "name": "md-ticket-board",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://andkirby.github.io/markdown-ticket",
  "scripts": {
    "dev": "vite",
    "dev:server": "cd server && npm run dev",
    "dev:full": "npm run build:shared && concurrently \"npm run dev\" \"npm run dev:server\"",
    "build:shared": "tsc --project tsconfig.shared.json",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "build": "tsc --project tsconfig.shared.json && tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:update": "playwright test --update-snapshots"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.19",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/theme": "^2.0.19",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/dompurify": "^3.0.5",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "dompurify": "^3.2.7",
    "express": "^4.19.2",
    "framer-motion": "^10.16.4",
    "html-react-parser": "^5.2.6",
    "lucide-react": "^0.542.0",
    "mermaid": "^11.12.0",
    "postcss": "^8.5.6",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^7.9.3",
    "showdown": "^2.1.0",
    "tailgrids": "^2.3.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "toml": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "typescript": "^5.2.2",
    "vite": "^7.1.9"
  }
}
